{
  "name": "property_management_capstone_backend",
  "type": "module",
  "imports": {
    "#*": "./*.js"
  },
  "node-pg-migrate": {
    "databaseUrl": "postgresql://postgres:1221qaApo@localhost:5432/property_management_portfolio",
    "dir": "db/migrations",
    "migrationsTable": "pgmigrations"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch --env-file=.env server.js",
    "test": "vitest",
    "db:schema": "psql -d property_management_portfolio -f db/schema.sql",
    "db:seed": "node --env-file=.env db/seed.js",
    "db:reset": "npm run db:schema && npm run db:seed",
    "db:schema:render": "node db/schema.js",
    "db:seed:render": "node db/seed.js",
    "migrate": "node --env-file=.env node_modules/node-pg-migrate/bin/node-pg-migrate",
    "migrate:create": "npm run migrate create --"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@faker-js/faker": "^9.8.0",
    "bcrypt": "^5.1.1",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "multer-storage-cloudinary": "^4.0.0",
    "node-cron": "^4.1.0",
    "pg": "^8.14.1",
    "stripe": "^18.2.1"
  },
  "devDependencies": {
    "node-pg-migrate": "^8.0.3",
    "supertest": "^7.1.0",
    "vitest": "^3.1.2"
  }
}
